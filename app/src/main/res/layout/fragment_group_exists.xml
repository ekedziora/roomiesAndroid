<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_group"
        android:textSize="16sp"
        android:id="@+id/groups_leave_button"
        android:layout_alignTop="@+id/groups_edit_button"
        android:layout_toStartOf="@+id/groups_edit_button"
        android:layout_toLeftOf="@+id/groups_edit_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_group"
        android:textSize="16sp"
        android:id="@+id/groups_edit_button"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_group"
        android:textSize="16sp"
        android:id="@+id/groups_delete_button"
        android:layout_toEndOf="@+id/groups_edit_button"
        android:layout_alignTop="@+id/groups_edit_button"
        android:layout_toRightOf="@+id/groups_edit_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameColon"
        android:id="@+id/groups_name_label"
        android:layout_below="@id/groups_edit_button"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groups_name_value"
        android:layout_toEndOf="@+id/groups_name_label"
        android:layout_alignTop="@+id/groups_name_label"
        android:layout_toRightOf="@+id/groups_name_label"
        android:layout_marginLeft="37dp"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addressColon"
        android:id="@+id/groups_address_label"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/groups_name_label"
        android:layout_toLeftOf="@+id/groups_name_value"
        android:layout_toStartOf="@+id/groups_name_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groups_address_value"
        android:layout_alignTop="@+id/groups_address_label"
        android:layout_alignLeft="@+id/groups_name_value"
        android:layout_alignStart="@+id/groups_name_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adminColon"
        android:id="@+id/groups_admin_label"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/groups_address_label"
        android:layout_toLeftOf="@+id/groups_name_value"
        android:layout_toStartOf="@+id/groups_name_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groups_admin_value"
        android:layout_alignTop="@+id/groups_admin_label"
        android:layout_alignLeft="@+id/groups_address_value"
        android:layout_alignStart="@+id/groups_address_value" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groups_members_list_view"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/groups_admin_label"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</RelativeLayout>
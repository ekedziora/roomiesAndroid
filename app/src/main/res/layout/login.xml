<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome"
        android:id="@+id/login_title"
        android:layout_marginTop="55dp"
        android:textSize="40sp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:id="@+id/login_loginButton"
        android:layout_marginTop="58dp"
        android:text="@string/login"
        android:layout_below="@+id/login_title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:layout_marginTop="66dp"
        android:text="User"
        android:layout_below="@+id/login_loginButton"
        android:layout_alignLeft="@+id/login_loginButton"
        android:layout_alignStart="@+id/login_loginButton" />
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.kedziora.emilek.roomies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".app.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activity.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".app.activity.MyAccountActivity"
            android:label="@string/title_activity_my_account"
            android:parentActivityName=".app.activity.DashboardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.kedziora.emilek.roomies.app.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".app.activity.GroupsExistingActivity"
            android:label="@string/title_activity_groups"
            android:parentActivityName=".app.activity.DashboardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.kedziora.emilek.roomies.app.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".app.activity.GroupActivity"
            android:label="@string/title_activity_groups"
            android:parentActivityName=".app.activity.DashboardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.kedziora.emilek.roomies.app.activity.DashboardActivity" />
        </activity>
    </application>

</manifest>
